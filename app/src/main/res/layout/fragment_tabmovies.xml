<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MoviesTab">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Movies Poster">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/honestthief" />

            <TextView
                android:id="@+id/textView1"
                android:background="@color/black"
                style="@style/explore_selections_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/example_text_in_selections_tab" />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/greenland" />
            <TextView
                android:id="@+id/textView2"
                android:background="@color/black"
                style="@style/explore_selections_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/example_text_in_selections_tab" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ladder" />
            <TextView
                android:id="@+id/textView3"
                android:background="@color/black"
                style="@style/explore_selections_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/example_text_in_selections_tab" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>